{
    "name": "mcris112/laravel-hashidable",
    "description": "LaravelHashidable - Hashids for Laravel Models and Routes",
    "type": "library",
    "keywords": ["hashids", "hash", "hashidable", "laravel"],
    "license": "MIT",
    "authors": [
        {
            "name": "Cristopher MCris112",
            "email": "cristopher@darkredgm.com"
        },
        {
            "name": "Samuel Oloruntoba",
            "email": "tag@kayandra.co"
        }
    ],
    "require": {
        "php": ">=7.0",
        "hashids/hashids": "^4.0"
    },
    "require-dev": {
        "orchestra/testbench": "^5.3",
        "phpunit/phpunit": "^9.2",
        "orchestra/database": "^5.1"
    },
    "autoload": {
        "psr-4": {
            "Mcris112\\LaravelHashidable\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mcris112\\LaravelHashidable\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mcris112\\LaravelHashidable\\HashidableServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "phpunit --color=always"
    },
    "minimum-stability": "stable"
}
